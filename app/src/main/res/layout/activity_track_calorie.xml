<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Your Calories"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Food Name -->
        <EditText
            android:id="@+id/etFood"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Food Name"
            android:background="@drawable/edittext_rounded_white"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textCursorDrawable="@null"
            android:layout_marginBottom="16dp" />

        <!-- Calories -->
        <EditText
            android:id="@+id/etCalories"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Calorie (kcal)"
            android:inputType="number"
            android:background="@drawable/edittext_rounded_white"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textCursorDrawable="@null"
            android:layout_marginBottom="24dp" />

        <!-- Add Button -->
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Track Calories"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_primary_rounded"
            android:textStyle="bold" />

        <!-- Food Log Button -->
        <Button
            android:id="@+id/btnFoodLog"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="Add Food"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_secondary_green"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFoodList"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="Food list"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_primary_rounded"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
